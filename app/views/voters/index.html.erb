<h1>Listing voters</h1>
  <% if notice %>
  <p id="notice"><%= notice %></p>
  <% end %>
  
<table>
  <tr>
    <th>Name</th>
    <th>Department</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @voter.each do |voter| %>
  <tr>
    <td><%= voter.name %></td>
    <td><%= voter.department %></td>
    <td><%= link_to 'Show', voter %></td>
    <td><%= link_to 'Edit', edit_voter_path(voter) %></td>
    <td><%= link_to 'Destroy', voter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

